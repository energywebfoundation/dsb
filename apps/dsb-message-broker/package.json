    "scripts": {
        "build": "rimraf dist && tsc",
        "build:container": "make build-container",
        "generate:schema": "ts-node src/generateSchema.ts ../../specs/schema.yaml",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:dev:win": "set NODE_ENV=development && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "mocha",
        "test:e2e": "mocha -r ts-node/register test/*.e2e-spec.ts --timeout 60000 --exit"
    },
